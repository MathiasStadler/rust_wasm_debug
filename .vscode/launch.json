{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Browser Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/dist",
            // Needed to keep the dwarf extension in the browser
